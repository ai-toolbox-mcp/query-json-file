{
  "name": "@ai-toolbox-mcp/query-json-file",
  "version": "0.1.0",
  "description": "MCP server for querying JSON files",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "changelog:add": "./scripts/changelog.sh add",
    "changelog:help": "./scripts/changelog.sh help",
    "changelog:prepare": "./scripts/changelog.sh prepare",
    "clean": "rm -rf dist",
    "dev": "tsc && node dist/index.js",
    "dev:http": "tsx src/index.ts --transport http --port 3925",
    "dxt:pack": "pnpm run build && pnpm run dxt:validate && pnpm run dxt:pack:clean",
    "dxt:pack:clean": "mv node_modules node_modules.dev && pnpm install --prod && dxt pack . ./extensions/$npm_package_name-$npm_package_version.dxt && rm -rf node_modules && mv node_modules.dev node_modules",
    "dxt:validate": "dxt validate manifest.json",
    "format": "prettier --write . && eslint --fix .",
    "format:check": "prettier --check src/**/*.ts",
    "generate-test-data": "node ./test-data/generate-test-data.js",
    "inspect": "npx fastmcp inspect src/index.ts",
    "inspect2": "npx @modelcontextprotocol/inspector",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "mcp-cli": "fastmcp dev src/index.ts",
    "quality": "pnpm run lint && pnpm run format:check && pnpm run type-check",
    "release": "./scripts/release.sh",
    "release:major": "pnpm run version:major && pnpm run dxt:pack",
    "release:minor": "pnpm run version:minor && pnpm run dxt:pack",
    "release:patch": "pnpm run version:patch && pnpm run dxt:pack",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "version:major": "npm version major",
    "version:minor": "npm version minor",
    "version:patch": "npm version patch",
    "update-mcp-docs": "node scripts/update-mcp-docs.js",
    "watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-toolbox-dev/json-query-file.git"
  },
  "homepage": "https://ai-toolbox.dev/mcp",
  "keywords": [
    "mcp",
    "json",
    "jsonpath",
    "query json",
    "json schema"
  ],
  "author": "Eric Berry <eric@berrydev.ai>",
  "license": "MIT",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "fastmcp": "^1.27.7",
    "genson-js": "^0.0.8",
    "jsonpath-plus": "^10.3.0",
    "load-json-file": "^7.0.1",
    "zod": "^3.25.76"
  },
  "bin": {
    "json-query-file": "dist/index.js"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "pnpm format"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@faker-js/faker": "^9.9.0",
    "@modelcontextprotocol/inspector": "^0.16.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.16.5",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "^4.15.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "json-schema-faker": "^0.5.9",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^2.1.5"
  }
}
